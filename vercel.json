{
  "buildCommand": "npm install && NODE_ENV=production npx vite build --mode production",
  "outputDirectory": "dist/public",
  "installCommand": "npm install --legacy-peer-deps",
  "functions": {
    "api/index.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ]
}
