{
  "buildCommand": "npm run build",        // Command to build your app
  "outputDirectory": "dist/public",       // Where the built files go
  "installCommand": "npm install",        // Command to install packages
  "framework": "vite",                    // Tells Vercel this is a Vite project
  "functions": {
    "api/index.js": {
      "maxDuration": 30,                  // API timeout (30 seconds)
      "runtime": "nodejs18.x"             // Use Node.js version 18
    }
  },
  "rewrites": [                           // URL routing rules
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ]
}
